<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

  <ImageButton
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"
      android:layout_marginStart="4dp"
      android:layout_marginTop="4dp"
      android:id="@+id/hr_imageview"/>
  <TextView
      android:text="TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:layout_below="@+id/hr_imageview"
      android:layout_alignStart="@+id/hr_imageview" android:layout_marginStart="11dp"
      android:layout_marginTop="14dp" android:id="@+id/hr_cityName"/>
  <TextView
      android:text="TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:layout_alignTop="@+id/hr_cityName"
      android:layout_toEndOf="@+id/hr_cityName" android:layout_marginStart="31dp"
      android:id="@+id/hr_countryName"/>
  <TextView
      android:text="TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:layout_below="@+id/hr_cityName"
      android:layout_alignStart="@+id/hr_cityName" android:layout_marginTop="22dp"
      android:id="@+id/hr_price"/>

</RelativeLayout>